                android:inputType="text"
                android:textSize="13sp"
                />



            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/nomorhpreseller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nomor handphone"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:textSize="13sp"
                />



            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/usernamereseller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Username"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:inputType="textShortMessage"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/passwordreseller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                />
-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/prosedurjadireseller"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/emailreseller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:inputType="textEmailAddress"
                android:textSize="13sp"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/alamatreseller"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Alamat"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:inputType="textImeMultiLine"
                android:textSize="13sp"
                android:layout_gravity="start"
                android:gravity="top"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/daftarreseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:roundedCorners="true"
                app:bootstrapBrand="danger"
                android:text="DAFTAR"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>

</LinearLayout>