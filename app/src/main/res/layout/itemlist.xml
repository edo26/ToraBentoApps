<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:focusableInTouchMode="true"
        android:layout_margin="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="3dp"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/thumbnails"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:src="@drawable/shrimproll"
               android:scaleType="fitXY"
               />

           <TextView
               android:text="tes"
               android:layout_marginLeft="6dp"
               android:id="@+id/nmMakanan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="22sp"
               android:layout_marginBottom="4dp"
               android:layout_below="@id/thumbnails"
               />

           <TextView
               android:id="@+id/stokmakantv"
               android:layout_toRightOf="@id/nmMakanan"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_above="@+id/harga"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:textSize="12sp"
               android:textColor="@color/Black"
               android:text="tes4"
               android:layout_marginRight="6dp"
               />

           <TextView
               android:text="tes2"
               android:layout_marginLeft="6dp"
               android:id="@+id/status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:layout_marginBottom="10dp"
               android:layout_below="@id/nmMakanan"
               />

           <TextView
               android:text="tes3"
               android:layout_marginRight="6dp"
               android:id="@+id/harga"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_alignBaseline="@+id/status"
               android:layout_alignBottom="@+id/status"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="@color/Green"/>


       </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>